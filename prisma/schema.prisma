// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  username   String   @unique
  name       String
  email      String?  @unique
  avatar_url String?
  created_at DateTime @default(now())

  // RELATIONS
  accounts Account[]
  sessions Session[]

  @@map("users")
}

// INTEGRAÇÃO DE UM USUÁRIO COM ALGUM PROVIDER
// SEMPRE QUE O USUÁRIO LOGA, EXEMPLO GITHUB E GOOLE
// VAMOS TER UM ACCOUNT PARA O GOOGLE E OUTRO PARA O GITHUB E OUTRO REGISTRO PARA O GOOGLE
// PORÉM O USUÁRIO É O MESMO
model Account {
  id                  String  @id @default(cuid())
  user_id             String  @map("user_id")
  type                String
  provider            String
  provider_account_id String  @map("provider_account_id")
  refresh_token       String?
  access_token        String?
  expires_at          Int?
  token_type          String?
  scope               String?
  id_token            String?
  session_state       String?

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([provider, provider_account_id])
  @@map("accounts")
}

// CADA VEZ QUE O USUÁRIO FIZER LOGIN EM UMA MÁQUINA DIFERENTE
// VAMOS TER UMA SESSÃO
model Session {
  id            String   @id @default(cuid())
  session_token String   @unique
  user_id       String
  expires       DateTime
  user          User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("sessions")
}
